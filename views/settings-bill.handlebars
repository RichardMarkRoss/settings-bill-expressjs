<hr>

<div class="row">

  <div class="six columns">
    <h5>Bill type</h5>
    <label class="">
      <input type="radio" name="billItemTypeWithSettings" class="billItemTypeWithSettings" value="call">
      <span class="label-body">Call</span>
    </label>
    <label class="">
      <input type="radio" name="billItemTypeWithSettings" class="billItemTypeWithSettings" value="sms">
      <span class="label-body">SMS</span>
    </label>
    <button class="button-primary" type="button" name="button">Add</button>

    <h5>Totals</h5>
    <table>
      <tr>
        <td>
          <a href="/actions/calls">Call total</a>
        </td>
        <td>R
          <span class="callTotalSettings">{{callCost}}</span>
        </td>
      </tr>
      <tr>
        <td>
          <a href="/actions/sms">SMS total</a>
        </td>
        <td>R
          <span class="smsTotalSettings">{{smsCost}}</span>
        </td>
      </tr>
      <tr>
        <td>
          <a href="/actions">Total</a>
        </td>
        <td> R
          <span class="totalSettings {{color}}">{{totalCost}}</span>
        </td>
      </tr>
    </table>

  </div>
  <div class="six columns">
    <h5>Settings</h5>
    <form class="" action="/settings" method="post">
      <input type="text" name="smsCost" placeholder="enter sms cost" value="{{settings.callCost}}">
      <input type="text" name="callCost" placeholder="enter call cost" value="{{settings.smsCost}}">
      <input type="text" name="callCost" placeholder="enter warning level" value="{{settings.warningLevel}}">
      <input type="text" name="callCost" placeholder="enter critical level" value="{{settings.criticalLevel}}">
      <input type="submit">
    </form>
  </div>
</div>